{
  "name": "update-static-assets",
  "version": "1.0.1",
  "private": true,
  "description": "A GitHub Action that updates HTML static assets.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "format-check": "prettier --check src/**/*.ts tests/**/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --coverage",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martincostello/update-static-assets.git"
  },
  "keywords": [
    "actions",
    "assets",
    "css",
    "github",
    "html",
    "javascript",
    "static",
    "update"
  ],
  "author": {
    "name": "Martin Costello",
    "url": "https://martincostello.com/"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/martincostello/update-static-assets/issues"
  },
  "homepage": "https://github.com/martincostello/update-static-assets#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@actions/http-client": "2.0.1",
    "@actions/io": "^1.1.2",
    "glob": "^8.0.3",
    "jsdom": "^20.0.1"
  },
  "devDependencies": {
    "@octokit/types": "^7.5.1",
    "@types/node": "^18.8.1",
    "@typescript-eslint/parser": "^5.39.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.24.0",
    "eslint-plugin-github": "^4.3.6",
    "eslint-plugin-jest": "^27.0.4",
    "jest": "^28.1.3",
    "js-yaml": "^4.1.0",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "typescript": "^4.8.4",
    "uuid": "^9.0.0"
  }
}
