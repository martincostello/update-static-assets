{
  "name": "update-static-assets",
  "version": "3.0.1",
  "private": true,
  "description": "A GitHub Action that updates HTML static assets.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write eslint.config.mjs src/**/*.ts tests/**/*.ts",
    "format-check": "prettier --check eslint.config.mjs src/**/*.ts tests/**/*.ts",
    "generate": "npm run build && npm run package",
    "lint": "eslint src/**/*.ts --fix",
    "package": "esbuild lib/main.js --bundle --external:./xhr-sync-worker.js --minify --outdir=dist --packages=bundle --platform=node --sourcemap --target=node24.0.0",
    "test": "vitest run",
    "publish": "npm run format && npm run lint && npm run generate",
    "all": "npm run publish && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martincostello/update-static-assets.git"
  },
  "keywords": [
    "actions",
    "assets",
    "css",
    "github",
    "html",
    "javascript",
    "static",
    "update"
  ],
  "author": {
    "name": "Martin Costello",
    "url": "https://martincostello.com/"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/martincostello/update-static-assets/issues"
  },
  "homepage": "https://github.com/martincostello/update-static-assets#readme",
  "dependencies": {
    "@actions/core": "1.11.1",
    "@actions/exec": "1.1.1",
    "@actions/github": "6.0.1",
    "@actions/io": "2.0.0",
    "@octokit/plugin-paginate-rest": "14.0.0",
    "@octokit/plugin-rest-endpoint-methods": "11.0.1",
    "glob": "13.0.0",
    "jsdom": "27.3.0",
    "lru-cache": "11.2.4",
    "undici": "7.16.0",
    "uuid": "13.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.3",
    "@eslint/js": "9.39.1",
    "@octokit/types": "16.0.0",
    "@stylistic/eslint-plugin": "5.6.1",
    "@types/node": "24.10.2",
    "@typescript-eslint/eslint-plugin": "8.49.0",
    "@typescript-eslint/parser": "8.49.0",
    "@vitest/coverage-v8": "4.0.15",
    "@vitest/eslint-plugin": "1.5.2",
    "@vitest/ui": "4.0.15",
    "esbuild": "0.27.1",
    "eslint": "9.39.1",
    "eslint-plugin-github": "6.0.0",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "16.5.0",
    "prettier": "3.7.4",
    "typescript": "5.9.3",
    "vitest": "4.0.15"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 80,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}
